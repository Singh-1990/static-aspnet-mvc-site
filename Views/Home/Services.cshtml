@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Services Section -->
<section id="services" class="services section light-background">
    <div class="container section-title" data-aos="fade-up">
        <h2>Our Services</h2>
        <p>We provide a wide range of IT solutions to meet your business goals.</p>
    </div>
    <div class="container">
        <div class="row gy-4">
            <div class="col-xl-3 col-md-6 d-flex" data-aos="fade-up" data-aos-delay="100">
                <div class="service-item position-relative">
                    <div class="icon"><i class="bi bi-code-slash icon"></i></div>
                    <h4><a href="#" class="stretched-link">Web Development</a></h4>
                    <p>We build modern, responsive, and secure web applications tailored to your needs.</p>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 d-flex" data-aos="fade-up" data-aos-delay="200">
                <div class="service-item position-relative">
                    <div class="icon"><i class="bi bi-phone icon"></i></div>
                    <h4><a href="#" class="stretched-link">Mobile App Development</a></h4>
                    <p>Get iOS & Android mobile apps that scale and perform efficiently.</p>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 d-flex" data-aos="fade-up" data-aos-delay="300">
                <div class="service-item position-relative">
                    <div class="icon"><i class="bi bi-bar-chart-line icon"></i></div>
                    <h4><a href="#" class="stretched-link">Digital Marketing</a></h4>
                    <p>Boost your online presence with effective SEO, SEM, and social media strategies.</p>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 d-flex" data-aos="fade-up" data-aos-delay="400">
                <div class="service-item position-relative">
                    <div class="icon"><i class="bi bi-shield-lock icon"></i></div>
                    <h4><a href="#" class="stretched-link">Cyber Security</a></h4>
                    <p>Protect your digital assets with our robust security solutions and audits.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Work Process Section -->
<section id="work-process" class="work-process section">
    <div class="container section-title" data-aos="fade-up">
        <h2>How We Work</h2>
        <p>Our process ensures timely delivery and high-quality results.</p>
    </div>
    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row gy-5">
            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="200">
                <div class="steps-item">
                    <div class="steps-image">
                        <img src="~/img/steps/steps-1.webp" alt="Step 1" class="img-fluid" loading="lazy">
                    </div>
                    <div class="steps-content">
                        <div class="steps-number">01</div>
                        <h3>Requirement Gathering</h3>
                        <p>We start by understanding your business goals and project requirements thoroughly.</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="300">
                <div class="steps-item">
                    <div class="steps-image">
                        <img src="~/img/steps/steps-2.webp" alt="Step 2" class="img-fluid" loading="lazy">
                    </div>
                    <div class="steps-content">
                        <div class="steps-number">02</div>
                        <h3>Design & Planning</h3>
                        <p>We create wireframes, UI designs, and prepare a project roadmap for execution.</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="400">
                <div class="steps-item">
                    <div class="steps-image">
                        <img src="~/img/steps/steps-3.webp" alt="Step 3" class="img-fluid" loading="lazy">
                    </div>
                    <div class="steps-content">
                        <div class="steps-number">03</div>
                        <h3>Development & Launch</h3>
                        <p>We develop, test, and deploy your product using best practices and latest tech.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call To Action Section -->
<section id="call-to-action" class="call-to-action section dark-background">
    <img src="~/img/bg/bg-8.webp" alt="">
    <div class="container">
        <div class="row" data-aos="zoom-in" data-aos-delay="100">
            <div class="col-xl-9 text-center text-xl-start">
                <h3>Ready to Start Your Project?</h3>
                <p>Contact us now for a free consultation and let’s build something great together.</p>
            </div>
            <div class="col-xl-3 cta-btn-container text-center">
                <a class="cta-btn align-middle" href="/contact">Contact Us</a>
            </div>
        </div>
    </div>
</section>


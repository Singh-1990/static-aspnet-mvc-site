@{
    ViewData["Title"] = "UploadCV";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header bg-primary text-white text-center rounded-top-4">
                        <h3 class="mb-0">Upload Your CV</h3>
                    </div>
                    <div class="card-body p-4">
                        <form asp-controller="Home" asp-action="UploadCV" method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="cvFile" class="form-label fw-semibold">Select your CV file</label>
                                <input type="file" class="form-control" name="cvFile" id="cvFile" accept=".pdf,.doc,.docx" required>
                                <div class="form-text">Accepted formats: .pdf, .doc, .docx</div>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Upload CV</button>
                        </form>
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-info mt-3 text-center">
                                @ViewBag.Message
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
